<Window x:Class="Sys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sys"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="400" MinHeight="220" MinWidth="220" Initialized="Window_Initialized">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox x:Name="Login" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="185" IsEditable="True" Margin="5,10,0,10" Foreground="Black"/>
        <Label Content="Пароль:" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="23"  VerticalAlignment="Top" Width="185" Margin="5,10,0,10"/>
        <Button  HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="40" Height="30" Click="Button_Click" Style="{StaticResource Button_Style_1}" Content="Вход" Margin="20,3,20,30"/>
    </StackPanel>
</Window>
